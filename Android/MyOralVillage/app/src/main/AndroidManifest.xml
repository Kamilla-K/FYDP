<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fydp.myoralvillage" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game1Activity"
            android:label="@string/title_activity_game1"
            android:parentActivityName=".GameMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.myoralvillage.GameMenuActivity" />
        </activity>
        <activity
            android:name=".Game2Activity"
            android:label="@string/title_activity_game2"
            android:parentActivityName=".GameMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.myoralvillage.GameMenuActivity" />
        </activity>
        <activity
            android:name=".GamePlaceValueActivity"
            android:label="@string/title_activity_game_place_value"
            android:parentActivityName=".GameMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.myoralvillage.GameMenuActivity" />
        </activity>
    </application>

</manifest>
