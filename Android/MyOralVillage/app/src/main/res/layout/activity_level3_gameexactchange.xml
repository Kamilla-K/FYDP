<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background5">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >
        <ImageView
            android:id="@+id/score"
            android:src="@drawable/starb0"
            android:layout_width="320dip"
            android:layout_height="80dip"
            android:layout_marginLeft="5dip"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/home" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cashView"
            android:text="0"
            android:textSize="75px"
            android:paddingTop="10dip"
            android:paddingLeft="120dip"
            android:textAlignment="center"
            android:layout_width="380dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dip"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_width="530dip"
            android:layout_height="80dip"
            android:layout_gravity="right"
            android:paddingBottom="10dip"
            android:id="@+id/paidBox"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray" >

            <ImageView
                android:layout_width="90dip"
                android:layout_height="match_parent"
                android:id="@+id/paid500"
                android:paddingLeft="10dip"></ImageView>

                <TextView
                    android:id="@+id/paid500view"
                    android:layout_width="20dip"
                    android:layout_height="50dip"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="5dip"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:id="@+id/paid1000"></ImageView>

            <TextView
                android:id="@+id/paid1000view"
                android:layout_width="20dip"
                android:layout_height="50dip"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="5dip"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:id="@+id/paid2000"></ImageView>

            <TextView
                android:id="@+id/paid2000view"
                android:layout_width="20dip"
                android:layout_height="50dip"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="5dip"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:id="@+id/paid5000"></ImageView>

            <TextView
                android:id="@+id/paid5000view"
                android:layout_width="20dip"
                android:layout_height="50dip"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="5dip"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:id="@+id/paid10000"></ImageView>

            <TextView
                android:id="@+id/paid10000view"
                android:layout_width="20dip"
                android:layout_height="50dip"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white" />

                    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="240dp"
                android:id="@+id/item"
                android:layout_weight="0.4"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingBottom="30dip" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="500dp"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/darker_gray">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSandbox"
                    android:layout_alignParentRight="true"
                    android:gravity="top"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="5dip"
                    android:padding="5dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill500Snap"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dip"
                        android:gravity="top"
                        android:layout_weight="0.22"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="40dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill1000Snap"
                        android:layout_margin="5dip"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:layout_weight="0.22"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="50dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill2000Snap"
                        android:layout_margin="5dip"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/darker_gray"
                        android:layout_weight="0.232"
                        android:gravity="top" />

                    <LinearLayout
                        android:layout_width="50dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:id="@+id/bill5000Snap"
                    android:layout_margin="5dip"
                    android:layout_alignParentBottom="true"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageBox45"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/bill5000Snap"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:id="@+id/bill10000Snap"
                    android:layout_margin="5dip"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/imageBox45"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageBox55"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/bill10000Snap"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="300dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="10dip"></LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:id="@+id/nextArrow"
                    android:layout_margin="3dip"
                    android:background="@drawable/demo_next_right_arrow_black"
                    android:layout_weight="0.04"
                    android:onClick="checkAnswerPV" />

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="200dip"></LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_weight="0.2">


        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:id="@+id/bill500"
            android:background="@drawable/bill_500"
            android:layout_weight="0.04"
            android:layout_marginBottom="35dip"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:id="@+id/bill1000"
            android:background="@drawable/bill_1000"
            android:layout_weight="0.04"
            android:layout_marginBottom="35dip"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:id="@+id/bill2000"
            android:background="@drawable/bill_2000"
            android:layout_weight="0.04"
            android:layout_marginBottom="35dip"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:id="@+id/bill5000"
            android:background="@drawable/bill_5000"
            android:layout_weight="0.04"
            android:layout_marginBottom="35dip"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:id="@+id/bill10000"
            android:background="@drawable/bill_10000"
            android:layout_weight="0.04"
            android:layout_marginBottom="35dip"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
</RelativeLayout>