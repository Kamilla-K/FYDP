<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myrellayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context="com.fydp.myoralvillage.Level2ActivityGameOrdering"
    android:clipChildren="false"
    android:clipToPadding="false">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">



        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >
            <ImageButton
                android:id="@+id/skip_button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="@string/false_button"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:layout_alignParentLeft="true"
                android:background="@drawable/skip_button"
                android:clickable="true"
                android:onClick="exitDemo"/>

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginRight="20dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/home" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">


        <!--this is to add some margin above the baskets-->
        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="160dip"></LinearLayout>

        <LinearLayout
            android:layout_height="110dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/optionView0"
                android:layout_width="130dp"
                android:textSize="20sp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:text=""
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="@color/background_material_dark"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView1"
                android:textSize="20sp"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text=""
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="@color/background_material_dark"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView2"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:text=""
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="@color/background_material_dark"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView3"
                android:textSize="20sp"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:text=""
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="@color/background_material_dark"
                android:padding="10dp" />

        </LinearLayout>

        <!--margin between the baskets and bags-->
        <LinearLayout
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/sequenceView0"
                android:text="0"
                android:textSize="20sp"
                android:onClick="checkThisAnswer"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_peaches"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView1"
                android:text="0"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/bag_peaches"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView2"
                android:text="0"
                android:textSize="20sp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_peaches"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView3"
                android:text="0"
                android:textSize="20sp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_peaches"
                android:padding="10dp" />


        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</RelativeLayout>