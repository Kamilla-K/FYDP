<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fydp.myoralvillage.Level2ActivityGameFillInTheBlanks">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/sequenceView0"
        android:text="0"
        android:onClick="checkThisAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip">
                </LinearLayout>
            <TextView
                android:id="@+id/sequenceView1"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView2"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView3"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="100dip"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal">
    <Button
        android:id="@+id/optionView0"
        android:text="0"
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:background="@drawable/blank_sign"/>

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView1"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView2"
                android:text="0"
                android:onClick="checkThisAnswer"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
    </LinearLayout>
</LinearLayout>
