<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context="com.fydp.myoralvillage.Level2ActivityGameFillInTheBlanks">

    <ImageView
        android:id="@+id/score"
        android:src="@drawable/star0"
        android:layout_width="250dip"
        android:layout_height="50dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="40dip"
                android:layout_weight="0.25">
            </LinearLayout>
            <TextView
                android:id="@+id/sequenceView0"
                android:text="0"
                android:layout_weight="0.25"
                android:onClick="checkThisAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="70px"/>

            <TextView
                android:id="@+id/sequenceView1"
                android:text="0"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="70px" />
            <TextView
                android:id="@+id/sequenceView2"
                android:text="0"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="70px" />
            <TextView
                android:id="@+id/sequenceView3"
                android:text="0"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="70px" />
            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="40dip"
                android:layout_weight="0.25">
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="80dip">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/optionView0"
                android:text="0"
                android:layout_weight="0.2"
                android:onClick="checkThisAnswer"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:background="@drawable/flower3"/>

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_weight="0.2">
            </LinearLayout>
            <Button
                android:id="@+id/optionView1"
                android:text="0"
                android:layout_weight="0.2"
                android:onClick="checkThisAnswer"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:background="@drawable/flower3"/>
            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_weight="0.2">
            </LinearLayout>
            <Button
                android:id="@+id/optionView2"
                android:text="0"
                android:layout_weight="0.2"
                android:onClick="checkThisAnswer"
                android:clickable="true"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:background="@drawable/flower3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>