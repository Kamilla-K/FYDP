<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/myrellayout"
    android:layout_height="fill_parent"
    android:background="@drawable/background2"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_gravity="top" >
            <ImageButton
                android:id="@+id/skip_button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="@string/false_button"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_alignParentLeft="true"
                android:background="@drawable/skip_button" />

            <TextView
                android:id="@+id/cashView"
                android:text="0"
                android:textSize="75px"
                android:paddingTop="15dip"
                android:paddingLeft="120dip"
                android:textAlignment="center"
                android:layout_width="380dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120dip"
                android:layout_gravity="center"
                ></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dip"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="530dip"
                android:layout_height="80dip"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"
                android:id="@+id/paidLayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/paidBox"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="240dp"
                android:id="@+id/item"
                android:gravity="top"
                android:layout_weight="0.4"/>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="500dp"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/darker_gray">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSandbox"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dip"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="30dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill500Snap"
                        android:layout_margin="5dip"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:layout_weight="0.22"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="40dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill1000Snap"
                        android:layout_margin="5dip"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:layout_weight="0.22"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="40dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="65dp"
                        android:id="@+id/bill2000Snap"
                        android:layout_margin="5dip"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/darker_gray"
                        android:layout_weight="0.232"
                        android:gravity="top" />

                    <LinearLayout
                        android:layout_width="30dip"
                        android:layout_height="10dip"
                        android:layout_weight="0.2"></LinearLayout>

                </LinearLayout>



                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="65dp"
                    android:id="@+id/red"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/bill5000Snap"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="65dp"
                    android:id="@+id/bill5000Snap"
                    android:layout_margin="5dip"
                    android:layout_alignParentBottom="true"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageBox45"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/bill5000Snap"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="65dp"
                    android:id="@+id/bill10000Snap"
                    android:layout_margin="5dip"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/imageBox45"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageBox55"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/bill10000Snap"
                    android:gravity="top"
                    android:background="@android:color/darker_gray" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="300dip"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="10dip"></LinearLayout>

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="200dip"></LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_weight="0.2"
        android:clipChildren="false"
        android:clipToPadding="false">


        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dip"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bill500"
                android:background="@drawable/bill_500"
                android:layout_weight="0.04" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>


        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dip"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bill1000"
                android:background="@drawable/bill_1000"
                android:layout_weight="0.04" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dip"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bill2000"
                android:background="@drawable/bill_2000"
                android:layout_weight="0.04" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dip"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bill5000"
                android:background="@drawable/bill_5000"
                android:layout_weight="0.04" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"></LinearLayout>

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dip"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bill10000"
                android:background="@drawable/bill_10000"
                android:layout_weight="0.04" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/finger1"
        android:gravity="bottom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:visibility="invisible"
        android:layout_gravity="right"
        android:src="@drawable/finger"/>

</RelativeLayout>