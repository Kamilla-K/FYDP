

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GameMenuActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="8dip"
        android:layout_height="10dip"
        android:layout_gravity="top"/>
    <LinearLayout
        android:layout_width="40dip"
        android:layout_height="20dip"
        android:orientation="vertical"/>

    <ImageButton
        android:id="@+id/btn_lvl1"
        android:layout_height="150dip"
        android:layout_width="150dip"
        android:onClick="goToLevel1"
        android:background="@drawable/sign1"
        />

    <LinearLayout
        android:layout_width="20dip"
        android:layout_height="50dip"></LinearLayout>

    <ImageButton
        android:id="@+id/btn_lvl2"
        android:layout_height="150dip"
        android:layout_width="150dip"
        android:onClick="goToLevel2"
        android:background="@drawable/sign2"
        />

    <LinearLayout
        android:layout_width="20dip"
        android:layout_height="50dip"></LinearLayout>

    <ImageButton
        android:id="@+id/btn_lvl3"
        android:layout_height="150dip"
        android:layout_width="150dip"
        android:onClick="goToLevel3"
        android:background="@drawable/sign3"
        />

</LinearLayout>
