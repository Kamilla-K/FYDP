<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level2ActivityGamePV"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ones_representation1"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation2"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation3"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation4"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation5"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation6"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation7"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation8"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation9"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/ones_representation10"
                android:src="@drawable/game2_ones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_answer0"
                android:src="@drawable/game2_fingers1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:onClick="checkAnswer"/>

            <ImageView
                android:id="@+id/img_answer1"
                android:src="@drawable/game2_fingers1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:onClick="checkAnswer"/>

            <ImageView
                android:id="@+id/img_answer2"
                android:src="@drawable/game2_fingers1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:onClick="checkAnswer"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
