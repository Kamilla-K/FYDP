<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="1.1"
    android:layout_height="match_parent"
    tools:context="com.fydp.myoralvillage.Level1ActivityDemoDualCoding">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_gravity="top" >
        <ImageButton
            android:id="@+id/skip_button"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:text="@string/false_button"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/skip_button"
            android:clickable="true"
            android:onClick="exitDemo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_lvl1_dualCoding_previous"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/demo_next_left_arrow_black"
            android:layout_alignParentLeft="true"
            android:onClick="prevNumber"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/img_representation"
            android:src="@drawable/game1_dualcoding_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/img_number"
            android:src="@drawable/game1_demo_dualcoding_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_lvl1_dualCoding_next"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dip"
            android:background="@drawable/demo_next_right_arrow_black"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:onClick="nextNumber"/>
    </LinearLayout>

</LinearLayout>