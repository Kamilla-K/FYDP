<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:layout_weight="100">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >
        <ImageView
            android:id="@+id/score"
            android:src="@drawable/star0"
            android:layout_width="250dip"
            android:layout_height="60dip"
            android:layout_marginLeft="5dip"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/home"
            android:onClick="setHomeButton" />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  tools:context="com.fydp.myoralvillage.Level1ActivityGameTracing"
                  android:layout_weight="100">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="40">

        <ImageView android:id="@+id/image_view"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:maxWidth="300dp"
                   android:maxHeight="300dp"
                   android:layout_centerInParent="true"
                   android:src="@drawable/game1_qa_fingers0"

            />
        </RelativeLayout>
        <com.fydp.myoralvillage.PaintView
            android:id="@+id/custView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="60dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:layout_weight="10">
            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lvl1_gametracing_nextBtn"
                android:layout_centerInParent="true"
                android:onClick="newNumber"
                android:background="@drawable/demo_next_right_arrow_black"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>

